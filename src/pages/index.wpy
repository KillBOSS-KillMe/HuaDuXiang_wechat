.recommend {
  margin-bottom: 160rpx;
}
// 商品
.saleShopWrap {
  width: 100%;
  height: 100%;
  background: #f9f9f9;
  .saleShop {
    width: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;

    // item商品
    .shopview {
      background: #fff;
      width: 334rpx;
      height: 488rpx;
      display: inline-block;
      justify-content: center;
      flex-direction: column;
      align-items: center;
      margin-bottom: 19rpx;
      border-radius: 20rpx;
      image {
        width: 334rpx;
        height: 334rpx;
        display: block;
      }
      .saleTag {
        font-size: 30rpx;
        font-weight: bold;
        color: #333;
        padding: 20rpx;
        box-sizing: border-box;
        width: 100%;
        text {
          width: 290rpx;
          display: block;
        }
      }
      .salep {
        font-size: 28rpx;
        color: red;
        font-weight: bold;
        padding-left: 20rpx;
      }
      .salesmple {
        font-size: 24rpx;
        color: red;
        font-weight: normal;
      }
      .saleprice {
        font-weight: bolder;
        color: red;
        font-size: 34rpx;
      }
      .saleexprice {
        color: #666;
        font-size: 24rpx;
        font-weight: normal;
        padding-left: 25rpx;
        text-decoration: line-through;
      }
      .saletag {
        width: 60rpx;
        background: red;
        text-align: center;
        line-height: 20rpx;
        font-size: 10px;
        padding: 8rpx;
        color: white;
        border-radius: 10rpx;
