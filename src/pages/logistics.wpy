        flag: 1
      }
    ],
    express_name: '',
    shipping_code: ''
  };

  computed = {};

  methods = {};

  events = {};
  onLoad(t) {
    ajax({
      url: api.searchDeliver,
      data: {
        order_id: t.order_id
      }
    }).then(res => {
      this.logistics = res.datas.deliver_info.reverse() || []
      this.express_name = res.datas.express_name
      this.shipping_code = res.datas.shipping_code
      this.$apply()
    });
  }
}
