<template>
  <view class="wrap">
    <step :state.sync="state"></step>
    <form @submit="submit">
      <view class="agreement-wrap">
        <view class="agreement-title">用户证件上传</view>
        <view>
          <view class="upload">
            <view class="upload-h">
              <text>上传营业执照</text>(2MB以内)
            </view>
            <view class="img-wrap" @tap="uploadBusiness">
              <image src="{{business || '/assets/img/image69.png'}}">
            </view>
          </view>
          <view class="upload-title">上传法人身份证资料</view>
          <view class="upload">
            <view class="upload-h">
              <text>上传身份证正面</text>(2MB以内)
            </view>
            <view class="img-wrap" @tap="uploadCardFront">
              <image src="{{card_front ||'/assets/img/image70.png'}}">
            </view>
          </view>
          <view class="upload">
            <view class="upload-h">
              <text>上传身份证反面</text>(2MB以内)
            </view>
            <view class="img-wrap" @tap="uploadCardBack">
              <image src="{{card_back ||'/assets/img/image71.png'}}">
            </view>
          </view>
          <view class="upload-title">法人联系方式</view>
          <view>
            <view class="com-item">
              <view class="title">法人姓名</view>
              <input type="text" name="name" value="{{name}}" placeholder="请输入法人姓名">
            </view>
            <view class="com-item">
              <view class="title">法人电话</view>
              <input type="number" name="mobile"  value={{mobile}} maxlength="11" placeholder="请输入法人电话">
            </view>
          </view>
        </view>
      </view>
      <view class="nav-wrap">
        <navigator open-type="redirect" url="/pages/settledintwo" class="item">上一步</navigator>
        <button form-type="submit" class="item nav">下一步</button>
      </view>
    </form>
  </view>
</template>

<script>
import wepy from 'wepy';
import step from '../components/step';
var api = require('../api.js');
import { ajax } from '../ajax.js';
import { format } from '../utils/base.js';
var _ = require('../utils/underscore.js')


export default class Settledinthree extends wepy.page {
  config = {
    navigationBarTitleText: '入驻审核'
  };
  components = { step };

  mixins = [];

  data = {
    state: 3,
    business:'',
    card_front: '',
    card_back: '',
    business_licence_number_elc: '',
    id_card_back_image: '',
    id_card_front_image: '',
    name: '',
    mobile: ''
  };

  computed = {};
  onShow() {}
  methods = {
    submit(e) {
      this.debounce(e)
    },
    uploadBusiness() {
      this.uploadImg('business')
    },
    uploadCardFront() {
      this.uploadImg('card_front')
    },
    uploadCardBack() {
      this.uploadImg('card_back')
    }
  };
  uploadImg(name) {
    var that = this
    wx.chooseImage({
      count: 1,
      success (res) {
        const tempFilePaths = res.tempFilePaths
        wx.uploadFile({
          url: 'https://api.reindata.net/v1/goods/upload_file',
          filePath: tempFilePaths[0],
          name: 'photo',
          formData: {
            'file': 'test'
          },
          success (res){
            that[name] = 'https://api.reindata.net' + JSON.parse(res.data).data
            that.$apply()
            return false
            if(res.code == 1) {
              if(res.datas.state == 1) {
                that[name] = res.datas
                that.$apply()
              } else {
                wx.showToast({
                  title: res.datas.msg,
                  icon: 'none'
                })
              }
            }
          }
        })
      }
    })
  }

  events = {};

  onLoad() {
    // 防止重复提交第三方插件函数
    this.debounce = _.debounce(this.submit, 1000, {immediate: true})

    ajax({
      url: api.getJoinStep2,
      icon: 'none'
    }).then(res => {
      if (res.datas.state == 1) {
        var {
          business_licence_number_elc,
          id_card_back_image,
          id_card_front_image,
          name,
          mobile
        } = res.datas.data;
        this.business_licence_number_elc = business_licence_number_elc;
        this.id_card_back_image = id_card_back_image;
        this.id_card_front_image = id_card_front_image;
        this.name = name;
        this.mobile = mobile;
        this.$apply();
      }      
    })
  }
  submit(e) {
    var { name, mobile } = e.detail.value;
    if (!name) {
      wx.showToast({
        title: '请输入法人姓名',
        icon: 'none'
      });
      return false;
    }
    if (!format('phone', mobile)) {
      wx.showToast({
        title: '请输入正确格式联系电话',
        icon: 'none'
      });
      return false;
    } 
    ajax({
      url: api.joinStep2,
      data: {
        business_licence_number_elc: this.business_licence_number_elc,
        id_card_front_image: this.id_card_front_image,
        id_card_back_image: this.id_card_back_image,
        name: this.name,
        mobile: this.mobile,
      }
    })     
  }
}
</script>

