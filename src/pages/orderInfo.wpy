<script>
import wepy from 'wepy';
var api = require('../api.js');
import { ajax } from '../ajax.js';

export default class Index extends wepy.page {
  config = {
    navigationBarTitleText: '订单详情'
  };
  components = {};

  mixins = [];

  data = {
    requestImgUrl: '',
    order_info: '',
    goods_price: 0,
  };

  computed = {};

  events = {};

  onLoad(options) {
    this.order_id = options.order_id
    ajax({
      url: api.orderInfo,
      data: {
        order_id: options.order_id
      }
    }).then(res => {
      this.order_info = res.datas.order_info
      var goods_price = res.datas.order_info.goods_list.reduce((prev, next) => {
        var price = Number(next.goods_price)
        var num = Number(next.goods_num)
        return prev + price*num
      }, 0)
      this.goods_price = goods_price.toFixed(2)

      console.log(res.datas.order_info.if_buyer_cancel)
      this.$apply()
    })
  }
  onShow() {
    this.requestImgUrl = this.$parent.globalData.requestImgUrl;
  }
  methods = {
    orderCancel(){
      var that = this
      wx.showModal({
        title: '确认取消订单?',
        success(res) {
          if(res.confirm) {
            ajax({
              url: api.orderCancel,
              data: {
                order_id: that.order_id
              }
            }).then(e => {
              if(e.datas.state == 1) {
                wx.showToast({
                  title: e.datas.msg
                })
                var timer = setTimeout(() => {
                  wx.navigateBack()
                  clearTimeout(timer)
                }, 2000)
              } else {
                wx.showToast({
                  title: e.datas.error,
                  icon: 'none'
                })
              }
            })
          }
        }
      })
    },
    orderDelete(){
      var that = this
      wx.showModal({
        title: '确认删除订单?',
        success(res) {
          if(res.confirm) {
            ajax({
              url: api.orderDelete,
              data: {
                order_id: that.order_id
              }
            }).then(e => {
              if(e.datas.state == 1) {
                wx.showToast({
                  title: e.datas.msg
                })
                var timer = setTimeout(() => {
                  wx.navigateBack()
                  clearTimeout(timer)
                }, 2000)
              } else {
                wx.showToast({
                  title: e.datas.error,
                  icon: 'none'
                })
              }
            })
          }
        }
      })
    },
    orderReceive(){
      var that = this
      wx.showModal({
        title: '确认收货?',
        success(res) {
          if(res.confirm) {
            ajax({
              url: api.orderReceive,
              data: {
                order_id: that.order_id
              }
            }).then(e => {
              if(e.datas.state == 1) {
                wx.showToast({
                  title: e.datas.msg
                })
                var timer = setTimeout(() => {
                  wx.navigateBack()
                  clearTimeout(timer)
                }, 2000)
              } else {
                wx.showToast({
                  title: e.datas.error,
                  icon: 'none'
                })
              }
            })
          }
        }
      })
    },
    async pay() {
      var resData = await ajax({
        url: api.pay,
        data: {
          pay_sn: '900626631146390007',
          payment_code: 'mini_wxpay'
        }
      })

      if(resData.datas.state == 1) {
        var api_pay = resData.datas.api_pay
        wx.requestPayment({
          ...api_pay,
          success(res) {
            console.log(res)
          },
          complete(d) {console.log(d)}
        })
      }
    },
    setClipboardData(num) {
      wx.setClipboardData({
        data: num
      })
    }
  };
}
</script>
