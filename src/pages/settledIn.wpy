          <picker bindchange="storeGradeChange" range="{{storeGrade}}"  range-key="sg_name" disabled>
            <input type="text" placeholder="请选择店铺等级" value="{{storeGrade[storeGradeIndex].sg_name}}" disabled />
          </picker>
        </view>
        <view class="com-item">
