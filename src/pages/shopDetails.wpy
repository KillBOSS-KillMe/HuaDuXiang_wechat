                <view class="saleTag">
                  <text class="overflow-one">{{item.goods_name}}</text>
                </view>
                <view>
                  <view>
                    <text class="salep">价格</text>
                    <text class="salesmple">￥</text>
                    <text class="saleprice">{{item.goods_sale_price}}</text>
                    <!-- <text class="saleexprice">原价￥ {{item.goods_price}}</text> -->
                  </view>
                </view>
