  .shopview {
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    height: 200rpx;
    margin-bottom: 30rpx;
    .goods-img {
      width: 180rpx;
      height: 180rpx;
      border-radius: 10rpx;
    }
    .right {
      height: 190rpx;
      flex: 1;
      margin-left: 26rpx;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      .bargin-title {
        font-weight: bold;
        font-size: 28rpx;
        width: 480rpx;
      }
      .price {
        color: #333;
        font-size: 26rpx;
        text {
          color:#FF2228;
        }
      }
      .bargin-btn {
        width: 160rpx;
        height: 50rpx;
        line-height: 50rpx;
        background: #FF2228;
        border-radius: 10rpx;
        color: #fff;
        font-weight: bold;
        font-size: 26rpx;
        text-align: center;
        margin: 0 0 0 auto;
      }
      .err {
        background: #999;
      }
      .time-status {
        display: flex;
        align-items: center;
        > text {
          display: block;
