<template>
  <view>
    <view class="apply" wx:if="{{state != 2}}">
      <button class="btn" @tap="distHanld">{{txt}}</button>
    </view>
    <view class="income" wx:else>
      <view>
        <view class="income-title">我的收入</view>
        <view class="income-price">
          <text>￥</text>5200
        </view>
      </view>
      <view class="{{scrollFlag ? 'nav-top-active' : ''}}">
        <view class="nav-wrap">
          <repeat for="{{bannerArr}}" item="item">
            <view
              class="nav-item {{navIdx == index ? 'nav-active' : ''}}"
              @tap="changeNav({{index}})"
            >{{item}}</view>
          </repeat>
        </view>
        <view class="details-list" wx:if="{{navIdx == 0}}">
          <repeat for="{{9}}" item="item">
            <view class="details-item">
              <view class="title">
                <view>分销收入</view>
                <view class="price">
                  <text>+</text>￥60
                </view>
              </view>
              <view class="fot">
                <view>张三</view>
                <view>2018.9.1</view>
              </view>
            </view>
          </repeat>
        </view>
        <view class="details-list" wx:if="{{navIdx == 1}}">
          <repeat for="{{9}}" item="item">
            <view class="recommend">
              <view class="name">张三</view>
              <view class="time">注册于2019.12.21 12:23</view>
            </view>
          </repeat>
        </view>
      </view>
    </view>
  </view>
</template>

<script>
import wepy from 'wepy';
var api = require('../api.js');
import { ajax } from '../ajax.js';
export default class Index extends wepy.page {
  config = {
    navigationBarTitleText: '我的分销'
  };
  components = {};

  mixins = [];

  data = {
    requestImgUrl: '',
    bannerArr: ['收入明细', '我的推荐'],
    navIdx: 0,
    topHeight: null, // 吸顶距离
    scrollFlag: false, // 吸顶flag
    isDist: true, // 是否分销员
    state: null,
    txt: ''
  };

  computed = {};
  onLoad(options) {
    var that = this;
    wx.getSystemInfo({
      success(res) {
        var windowWidth = res.windowWidth;
        that.topHeight = (270 / 750) * windowWidth;
        console.log(that.topHeight);
      }
    });
    // 申请成为分销商
    ajax({
      url: api.fxMemberApply
    }).then(res => {
      this.state = res.datas.state;
      switch (res.datas.state) {
        case '0':
          this.txt = '申请成为分销员'
          break;
        default:
          this.txt = '重新申请成为分销员'
          break;
      }
      this.$apply()
    });
  }
  fxMemberApply() {
    // 申请成为分销商
    ajax({
      url: api.fxMemberApply,
      data: {
        apply: 1
      }
    }).then(res => {
      if (res.datas.state == 1) {
        wx.showToast({
          title: '申请成功'
        });
        var timer = setTimeout(() => {
          wx.navigateBack();
          clearTimeout(timer)
        }, 2000);
      } else {
        wx.showToast({
          msg: res.datas.state,
          icon: 'none'
        })
      }
    });
  }
  onShow() {}
  methods = {
    changeNav(idx) {
      if (idx == this.navIdx) return;
      this.navIdx = idx;
    },
    distHanld() {
      if(this.state == 1) {
        wx.showToast({
          title: '正在审核中，请勿重复',
          icon: 'none'
        })
        return false
      } 
      this.fxMemberApply();
    }
  };
  onPageScroll(e) {
    var isSatisfy = e.scrollTop >= this.topHeight ? true : false;
    if (this.scrollFlag == isSatisfy) {
      return false;
    }
    this.scrollFlag = isSatisfy;
    this.$apply();
  }

  events = {};
}
</script>


