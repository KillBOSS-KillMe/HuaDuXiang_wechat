<template>
  <view class="wrap">
    <!-- 头部卡片 -->
    <view class="topCard">
      <image src="{{requestImgUrl + topImg}}" />
    </view>
    <!-- 商品 -->
    <view class="saleShopWrap">
      <view class="saleShop">
        <repeat for="{{barginData}}" item="item">
          <view class="shopview" @tap="jumpTimeDetails({{item.goods_id}},{{item.is_join}})">
            <image src="{{requestImgUrl + item.goods_img}}" />
            <view>
              <text class="barginTitle overflow-one">{{item.goods_name}}</text>
              <progress
                class="barginProgess"
                percent="{{100 - 100 * item.goods_que / item.goods_nums}}"
                font-size="14"
                backgroundColor="#FFE0E1"
                activeColor="#FF2228"
                stroke-width="9"
                border-radius="10"
              />
              <text class="barginSurplus">已抢{{item.goods_que}}件</text>
              <text class="barginPriceNum">限量{{item.goods_nums}}件</text>
            </view>
            <button class="barginBtn">点击免费拿</button>
          </view>
        </repeat>
      </view>
    </view>
    <!-- 选择商品属性 -->
    <attrsmask :maskFlag.sync="attrFlag">
      <view class="attr-box">
        <view class="goods-t">
          <image class="goods-img" src="{{requestImgUrl + image_list[0]._big}}" />
          <view class="goods-right">
            <view class="title overflow-one">{{goods_content.goods_name}}</view>
            <view class="price">{{goods_content.goods_price}}</view>
            <view class="attr">
              <view>
                 <repeat for="{{goods_spec}}" wx:key="index">{{item}}</repeat>
              </view>
              <view>x{{goodsNum}}</view>
            </view>
          </view>
        </view>

         <view class="prop-wrap">
          <repeat for="{{attr}}" item="item" index="index">
            <view class="goods-h">{{item.title}}</view>
            <view class="prop">
              <repeat for="{{item.prop}}" item="ele" index="idx">
                <view class="prop-i {{goods_spec[index] == ele ? 'prop-active' : ''}}" @tap="changeAttr({{index}}, {{idx}}, {{ele}})">{{ele}}</view>
              </repeat>
            </view>
          </repeat>
        </view>

        <view class="prop-btn" @tap="attrBtnSubmit">确定</view>
      </view>
    </attrsmask>
    <!-- 选择地址 -->
    <addressmask :maskFlag.sync="addressFlag">
      <view class="shop-box">
        <view class="address">选择收货地址</view>
        <view class="userAddress">
          <text>{{address.true_name}}{{address.tel_phone}}</text>
          <text>{{address.area_info}}{{address.address}}</text>
        </view>
        <navigator  class="newAddress" hover-class="none" url="/pages/consignee">
