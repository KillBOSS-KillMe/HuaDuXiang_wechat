          <button open-type="share" class="share-btn">
            <image class="bg-img" src="/assets/img/image23.png" />
            <text>微信</text>
          </button>
        </view>
      </view>
    </sharesmask>

    <view class="none-content" wx:if="{{allpage == 0}}">
      <image src="/assets/img/image48.png"/>
      <navigator url="/pages/index" hover-class="none" open-type="reLaunch" class="go">去选购</navigator>
    </view>
  </view>
</template>

<script>
import wepy from 'wepy';
import mask from '../components/mask';
var api = require('../api.js');
import { ajax } from '../ajax.js';

export default class Index extends wepy.page {
  config = {
    navigationBarTitleText: '砍价'
  };
  components = {
    attrsmask: mask,
    addressmask: mask,
    sharesmask: mask
  };

  mixins = [];

  data = {
    goodsNum: 1,
    propArr: [1, 2, 3],
    attrFlag: false, //属性弹框
    addressFlag: false, //地址弹框
    shareFlag: false, //分享弹框
    requestImgUrl: '',
    barginData: [],
    topImg: '',
    goods_id: '', //当前商品id
    attr: [],  // 商品总属性数组
    activeAttr: [], // 当前点击属性数组
    goods_spec: [], // 默认属性数组
    spec_list: {}, // 所有属性对应的商品goods_id
    image_list: [], // 商品轮播图
    goods_content: '',
    address: '',
    curpage: 1, //当前页数
    hasmore: false, //是否有下一页
    allpage: null, // 没有数据
    kanjia_price: 0, //砍价金钱
  };

  computed = {};
  onShow() {
    var app = this.$parent;
    var address = app.globalData.address
    this.address = address
  }
  methods = {
    addressBtnSubmit() {
      if(!this.address) {
        wx.showToast({
          title: '请选择地址',
          icon: 'none'
        })
        return false
      }
      ajax({
        url: api.memberKanjia,
        data: {
          goods_id: this.goods_id,
          address_id: this.address.address_id
        }
      }).then(res => {
        if(res.code == 200) {
          if(res.datas.state == 0) {
            wx.showToast({
              title: res.datas.msg,
              icon: 'none'
            })
          } else {
            this.kanjia_price = res.datas.kanjia_price
            this.addressFlag = false;
            this.shareFlag = true;
            this.$apply()
          }
        } 
      })


      
    },
    attrBtnSubmit() {
      this.attrFlag = false;
      this.addressFlag = true;
    },
    reduNum() {
      if (this.goodsNum == 1) return;
      this.goodsNum--;
    },
    addNum() {
      this.goodsNum++;
    },
    jumpTimeDetails(goods_id, join) {
        this.attrFlag = true;
        this.goods_id = goods_id
        this.$apply()
        this.getShopDetails()
    },
    hideMask() {},
    changeAttr(index, idx, ele){
      this.activeAttr[index] = idx
      this.goods_spec[index] = ele
      var goods_id = this.spec_list[this.activeAttr.join('|')]
      this.goods_id = goods_id;
      this.$apply()
      this.getShopDetails()
    },
  };

  getShopDetails() {
    var that = this;
    // 普通商品详情
    ajax({
      url: api.ordinaryGoodsDtail,
      type: 'get',
      data: {
        goods_id: this.goods_id
      }
    }).then(res => {
      if(res.code == 200) {
        this.goods_content = res.datas.goods_content
        this.image_list = res.datas.image_list || []
        // 商品属性
        var spec_name = Object.values(res.datas.goods_content.spec_name  || {})
        var spec_value = Object.values(res.datas.goods_content.spec_value  || {})
        var attr = []
        spec_value.forEach((item, index) => {
          if(!attr[index]) {
            attr[index] = {}
          }
          attr[index].title = spec_name[index] 
          attr[index].prop = item
        })
        this.attr = attr
        this.goods_spec = Object.values(res.datas.goods_content.goods_spec || {})
        this.activeAttr = Object.keys(res.datas.goods_content.goods_spec  || {})
        this.spec_list = res.datas.spec_list
        this.$apply()
      }
    });
  }

  events = {};

  onLoad() {
    this.requestImgUrl = this.$parent.globalData.requestImgUrl;
    this.bargainGoodsList()

    ajax({
      url: api.memberKj,
    }).then(res => {
      this.topImg = res.datas.img_area
      this.$apply()
    })
  }
  onShareAppMessage(e) {
    if(e.from == "button") {
      var user = wx.getStorageSync('user')
      console.log(`goods_id=${this.goods_id}&userid=${user.userid}`)
      return {
        path: `/pages/barginInfo?goods_id=${this.goods_id}&userid=${user.userid}`
      }
    }
  }
  bargainGoodsList() {
    ajax({
      url: api.bargainGoodsList,
      data: {
        page: 10,
        curpage: this.curpage
      }
    }).then(res => {
      this.barginData = res.datas.list
      this.hasmore = res.datas.hasmore
      this.allpage = res.datas.allpage || 0
      this.$apply()
    })
  }
  onReachBottom () {
    if(this.hasmore) {
      this.curpage ++ 
      this.requestIndexGoodsList()
    }
  }  
}
</script>
