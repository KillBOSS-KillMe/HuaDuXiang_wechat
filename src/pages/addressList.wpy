<template>
  <view>
    <repeat for="{{5}}" item="item" wx:if="{{emptyFlag}}">
      <view class="address-wrap">
        <view class="address-top">
          <view>{{item.name}}名字</view>
          <view>{{item.phone}}13324565655</view>
          <view>默认</view>
        </view>
        <view
          class="address-text overflow-two"
        >{{item.province}}{{item.city}}{{item.area}}{{item.address}}陕西省西安市蓝田县</view>
        <view class="address-fot">
          <view class="flex-class" bindtap="setAddress" data-id="{{item.id}}">
            <image
              wx:if="{{true}}"
              style="width: 48rpx;height: 48rpx;"
              src="/assets/img/image47.png"
            />
            <image wx:else style="width: 48rpx;height: 48rpx;" src="/assets/img/image46.png" />
            <text>设为默认</text>
          </view>
          <view class="flex-class">
            <navigator
              hover-class="none"
              url="/pages/add-address/add-address?id={{item.id}}"
              class="flex-class bianji"
            >
              <image style="width: 20rpx;height: 20rpx;" src="/assets/img/image45.png" />
              <view>编辑</view>
            </navigator>
            <view class="flex-class" data-id="{{item.id}}" bindtap="deleAddress">
              <image style="width: 20rpx;height: 20rpx;" src="/assets/img/image44.png" />
              <view>删除</view>
            </view>
          </view>
        </view>
      </view>
    </repeat>
    <view class="no-content" wx:if="{{!emptyFlag}}">
      <image src="/assets/img/image48.png" style="height: 296rpx; width: 296rpx;" />
      <view>暂无地址</view>
    </view>
    <navigator hover-class="none" url="/pages/addAddress"  class="address-btn">添加收货地址</navigator>
  </view>
</template>

<script>
import wepy from 'wepy';

export default class Index extends wepy.page {
  config = {
    navigationBarTitleText: '地址'
  };
  data = {
    emptyFlag: true
  };
  components = {};
  computed = {};
  methods = {
    // 删除地址
    deleAddress(e) {
      var that = this;
      var id = e.currentTarget.dataset.id;
      wx.showModal({
        title: '提示',
        content: '确定删除地址？',
        success(res) {
          if (res.confirm) {
            app.ajax({
              url: api.addressDel,
              data: {
                id
              },
              success(res) {
                if (res.code == 200) {
                  var list = that.data.list || [];
                  that.setData({
                    list: list.filter(item => item.id != id)
                  });
                  wx.showToast({
                    title: '删除成功'
                  });
                } else {
                  app.showToast1(res.msg);
                }
              }
            });
          }
        }
      });
    },
    // 设为默认地址
    setAddress(e) {
      var that = this;
      wx.showModal({
        title: '提示',
        content: '确定设置为默认地址？',
        success(res) {
          if (res.confirm) {
            app.ajax({
              url: api.addressAddUpdate,
              data: {
                id: e.currentTarget.dataset.id
              },
              success(res) {
                if (res.code == 200) {
                  var list = that.data.list;
                  that.onShow();
                  wx.showToast({
                    title: '设置成功'
                  });
                } else {
                  app.showToast1(res.msg);
                }
              }
            });
          }
        }
      });
    }
  };
  onLoad() {}
}
</script>

