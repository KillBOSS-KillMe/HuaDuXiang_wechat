<template>
<view>
  <view class="footer">
    <view class="ft_item {{navAction[0]}}">
      <view @tap="goIndex">
        <view class="iconfont iconshouye-copy"></view>
        <text class="text">首页</text>
      </view>
    </view>
    <view class="ft_item {{navAction[1]}}">
      <view @tap="goClass">
        <view class="iconfont iconfenlei"></view>
        <text class="text">分类</text>
      </view>
    </view>
    <view class="ft_item {{navAction[2]}}">
      <view @tap="goSettled ">
        <view class="iconfont iconshezhi"></view>
        <text class="text">入驻</text>
      </view>
    </view>
    <view class="ft_item {{navAction[3]}}">
      <view @tap="goByCar">
        <view class="iconfont icongouwuche-copy"></view>
        <text class="text">购物车</text>
      </view>
    </view>
    <view class="ft_item {{navAction[4]}}">
      <view @tap="goUser">
        <view class="iconfont iconwode"></view>
        <text class="text">我的</text>
      </view>
    </view>
  </view>
</view>
