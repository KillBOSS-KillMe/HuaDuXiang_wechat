.coupon-list {
  padding: 30rpx;
}
.coupon-list .coupon-item {
  position: relative;
  width: 690rpx;
  height: 248rpx;
  margin-bottom: 30rpx;
}
.coupon-list .coupon-item > image {
  width: 100%;
  height: 100%;
}
.coupon-list .coupon-item .coupon-cont {
  position: absolute;
  top: 0;
  left: 0;
  width: 690rpx;
  height: 248rpx;
  display: flex;
  align-items: center;
}
.coupon-list .coupon-item .coupon-cont .left {
  width: 436rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-weight: bold;
}
.coupon-list .coupon-item .coupon-cont .left .price {
  font-size: 30rpx;
}
.coupon-list .coupon-item .coupon-cont .left .price text {
  font-size: 76rpx;
}
.coupon-list .coupon-item .coupon-cont .left > text {
  font-size: 26rpx;
  padding-top: 20rpx;
}
.coupon-list .coupon-item .coupon-cont .right {
  width: 254rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.coupon-list .coupon-item .coupon-cont .right .txt {
  font-weight: bold;
  font-size: 44rpx;
  color: #333333;
  display: flex;
  flex-direction: column;
}
.coupon-list .coupon-item .coupon-cont .right .time {
  font-size: 20rpx;
  padding-top: 20rpx;
  color: #999999;
}
