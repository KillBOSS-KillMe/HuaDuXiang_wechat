
  <view class="wrap">
    <view class="search-wrap" bindtap="navSearch">
      <view class="search">
        <image class="search-img" src="/assets/img/image10.png"/>
        <input class="inputSerach" disabled/>
      </view>
    </view>
    <!-- 轮播 -->
    <view class="mainWheel">
      <swiper indicator-dots="true" autoplay="true" interval="2000" duration="500" circular="true">
        <block wx:for="{{bannerArr}}" wx:for-index="index" wx:for-item="item" wx:key="key">
          <swiper-item>
            <image src="{{requestImgUrl + item.imgsrc}}" class="slide-image"/>
          </swiper-item>
        </block>
      </swiper>
    </view>
    <!-- 中间选项 -->
    <view class="mainChoose">
      <block wx:for="{{ChooesData}}" wx:for-index="index" wx:for-item="item" wx:key="key">
        <view class="chooseItem" bindtap="tapName" data-wpytapname-a="{{item.id}}">
          <image class="chooseImg" src="{{item.img}}"/>
          <text class="chooseText">{{item.title}}</text>
        </view>
      </block>
    </view>
    <!-- 秒杀专区 -->
    <view class="seckill">
      <view class="seckilltitle">
        <view>秒杀专区</view>
        <!-- <view class="beginTime">下一场{{beginTime}}开始</view> -->
      </view>
      <!-- 倒计时 -->
      <!-- <view class="seckillCountdown" wx:if="{{wxTimerList.firstTimer.wxTimerSecond != 0}}">
        <view class="title">本场结束剩余</view>
        <view class="count-down-wrap">
          <text>{{wxTimerList.firstTimer.h}}</text>
          <view>:</view>
          <text>{{wxTimerList.firstTimer.m}}</text>
          <view>:</view>
          <text>{{wxTimerList.firstTimer.s}}</text>
        </view>
      </view>
      <view class="seckillCountdown" wx:if="{{wxTimerList.firstTimer.wxTimerSecond == 0}}">
        <view class="title">本场已结束，请等待下场活动</view>
      </view>-->
      <!-- 商品 -->
      <view class="saleShopWrap">
        <view class="saleShop">
          <block wx:for="{{goods_list}}" wx:for-index="index" wx:for-item="item" wx:key="key">
            <view class="shopview" bindtap="jumpDetails" data-wpyjumpdetails-a="{{item.goods_id}}" data-wpyjumpdetails-b="{{item.goods_sale_type}}">
              <image src="{{requestImgUrl + item.goods_image_url}}"/>
              <view class="saleTag">
                <text class="overflow-one">{{item.goods_name}}</text>
              </view>
              <view>
                <view>
                  <text class="salep">秒杀价</text>
                  <text class="salesmple">￥</text>
                  <text class="saleprice">{{item.goods_price}}</text>
                  <!-- <text class="saleexprice">原价￥ {{item.goods_price}}</text> -->
                </view>
              </view>
            </view>
          </block>
        </view>
      </view>
    </view>
    <!-- 推荐产品 -->
    <view class="seckill recommend">
      <view class="seckilltitle">
        <view>推荐产品</view>
      </view>
      <view class="saleShopWrap">
        <view class="saleShop">
          <block wx:for="{{goods_list}}" wx:for-index="index" wx:for-item="item" wx:key="key">
            <view class="shopview" bindtap="jumpDetails" data-wpyjumpdetails-a="{{item.goods_id}}" data-wpyjumpdetails-b="{{item.goods_sale_type}}">
              <image src="{{requestImgUrl + item.goods_image_url}}"/>
              <view class="saleTag">
                <text class="overflow-one">{{item.goods_name}}</text>
              </view>
              <view>
                <view>
                  <text class="salep">价格</text>
                  <text class="salesmple">￥</text>
                  <text class="saleprice">{{item.goods_price}}</text>
                </view>
              </view>
            </view>
          </block>
        </view>
      </view>
    </view>
    <button open-type="getUserInfo" id="getUserInfo"  wx:if="{{!hasUserInfo}}" bindgetuserinfo="getUserInfo"/>
    
<view>
  <view class="footer">
    <view class="ft_item {{$nav$navAction[0]}}">
      <view bindtap="$nav$goIndex">
        <view class="iconfont iconshouye-copy"/>
        <text class="text">首页</text>
      </view>
    </view>
    <view class="ft_item {{$nav$navAction[1]}}">
      <view bindtap="$nav$goClass">
        <view class="iconfont iconfenlei"/>
        <text class="text">分类</text>
      </view>
    </view>
    <view class="ft_item {{$nav$navAction[2]}}">
      <view bindtap="$nav$goSettled">
        <view class="iconfont iconshezhi"/>
        <text class="text">入驻</text>
      </view>
    </view>
    <view class="ft_item {{$nav$navAction[3]}}">
      <view bindtap="$nav$goByCar">
        <view class="iconfont icongouwuche-copy"/>
        <text class="text">购物车</text>
      </view>
    </view>
    <view class="ft_item {{$nav$navAction[4]}}">
      <view bindtap="$nav$goUser">
        <view class="iconfont iconwode"/>
        <text class="text">我的</text>
      </view>
    </view>
  </view>
</view>

  </view>