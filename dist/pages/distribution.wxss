.apply .btn {
  width: 690rpx;
  background: #ff2228;
  border-radius: 10rpx;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  color: #fff;
  font-weight: bold;
  font-size: 30rpx;
  margin: 180rpx auto;
}
.income .income-title {
  font-size: 34rpx;
  color: #333;
  font-weight: bold;
  padding: 30rpx;
}
.income .income-price {
  font-weight: bold;
  font-size: 50rpx;
  text-align: center;
  padding: 20rpx 0 80rpx;
}
.income .income-price text {
  font-size: 34rpx;
}
.income .nav-wrap {
  border-top: 20rpx solid #f3f3f3;
  display: flex;
  width: 100%;
  height: 96rpx;
  text-align: center;
  line-height: 96rpx;
}
.income .nav-wrap .nav-item {
  flex: 1;
  font-size: 30rpx;
  font-weight: bold;
  position: relative;
}
.income .nav-wrap .nav-active::after {
  content: '';
  width: 38rpx;
  height: 4rpx;
  background: #ff2228;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}
.income .details-list {
  border-top: 1px solid #ececec;
  padding: 20rpx 30rpx;
}
.income .details-list .details-item {
  padding: 20rpx 0;
}
.income .details-list .details-item .title {
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  font-weight: bold;
}
.income .details-list .details-item .title .price {
  color: #ff2228;
  font-size: 36rpx;
}
.income .details-list .details-item .fot {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #898989;
  padding-top: 10rpx;
}
.income .details-list .recommend {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
}
.income .details-list .recommend .name {
  font-weight: bold;
  font-size: 32rpx;
  color: #222;
}
.income .details-list .recommend .time {
  font-size: 24rpx;
  color: #898989;
}
.nav-top-active .nav-wrap {
  position: fixed;
  top: 0;
  background: #fff;
}
.nav-top-active .details-list {
  margin-top: 116rpx;
}
