.page .channels-nav {
  position: fixed;
  z-index: 999;
  top: 0;
  width: 100%;
  display: flex;
  height: 84rpx;
  align-items: center;
  background: #fff;
}
.page .channels-nav .nav-item {
  text-align: center;
  flex: 1;
  font-size: 30rpx;
  font-weight: bold;
  position: relative;
  height: 100%;
  line-height: 84rpx;
}
.page .channels-nav .nav-active {
  color: #ff2228;
}
.page .channels-nav .nav-active::after {
  position: absolute;
  content: '';
  width: 50rpx;
  height: 6rpx;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  background: #ff2228;
}
.page .channels-cont {
  padding-top: 84rpx;
}
.page .channels-cont .brand-list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 30rpx;
}
.page .channels-cont .brand-list .brand-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 30rpx 70rpx 20rpx 0;
}
.page .channels-cont .brand-list .brand-item:nth-of-type(4n) {
  margin-right: 0;
}
.page .channels-cont .brand-list .brand-item .img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}
.page .channels-cont .brand-list .brand-item text {
  font-weight: bold;
  padding-top: 10rpx;
}
.page .channels-cont .shops-list {
  display: flex;
  flex-wrap: wrap;
  padding: 30rpx 30rpx;
}
.page .channels-cont .shops-list .shops-item {
  margin: 0 6rpx 10rpx 0;
}
.page .channels-cont .shops-list .shops-item:nth-of-type(4n) {
  margin-right: 0;
}
.page .channels-cont .shops-list .shops-item .img {
  display: block;
  width: 168rpx;
  height: 168rpx;
  border-radius: 10rpx;
}
