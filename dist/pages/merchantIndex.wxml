
  <view class="shop-wrap">
    <!-- <repeat for="{{10}}" item="item"> -->
    <!-- <image class="search-img" src="/assets/img/image.png" /> -->
    <view class="shop-head">
      <image class="head-bg-img" src="/assets/img/image.png"/>
      <view class="cont">
        <view>
          <image class="head-img" src="/assets/img/image.png"/>
          <text>苏泊尔旗舰店</text>
        </view>
      </view>
    </view>
    <view class="shop-title">全部商品</view>
    <view class="saleShopWrap">
      <view class="saleShop">
        <block wx:for="{{flowData}}" wx:for-index="index" wx:for-item="item" wx:key="key">
          <view class="shopview" bindtap="navigate">
            <image src="http://img011.hc360.cn/g2/M06/45/BF/wKhQuFLfLl-EakIIAAAAAGqrml0128.jpg"/>
            <view class="saleTag">
              <text class="overflow-one">{{item.title}}</text>
            </view>
            <view class="fot">
              <text class="salesmple">￥</text>
              <text class="saleprice">{{item.price}}</text>
              <text class="saleexprice">原价￥ {{item.exprice}}</text>
            </view>
          </view>
        </block>
      </view>
    </view>
  </view>