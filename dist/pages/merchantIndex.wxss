.shop-wrap {
  background: #f9f9f9;
}
.shop-head {
  position: fixed;
  top: 0;
  height: 284rpx;
  width: 100%;
  background: #fff;
}
.shop-head .head-bg-img {
  width: 100%;
  height: 100%;
}
.shop-head .cont {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #00000088;
  padding: 50rpx 30rpx;
  display: flex;
  align-items: flex-end;
  box-sizing: border-box;
}
.shop-head .cont > view {
  display: flex;
  align-items: center;
}
.shop-head .cont > view .head-img {
  width: 94rpx;
  height: 94rpx;
  border-radius: 10rpx;
}
.shop-head .cont > view text {
  font-weight: bold;
  font-size: 34rpx;
  margin-left: 20rpx;
  color: #fff;
}
.shop-title {
  padding: 20rpx 30rpx 0 30rpx;
  font-weight: bold;
}
.nav-wrap {
  display: flex;
  align-items: center;
  height: 88rpx;
  position: fixed;
  top: 284rpx;
  width: 100%;
  background-color: #fff;
}
.nav-wrap .nav-item {
  flex: 1;
  text-align: center;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #333;
  position: relative;
}
.nav-wrap .nav-active {
  color: #FF2228;
  font-weight: bold;
}
.nav-wrap .nav-active::after {
  content: '';
  width: 60rpx;
  height: 4rpx;
  background-color: #FF2228;
  position: absolute;
  bottom: 4rpx;
  left: 50%;
  transform: translateX(-50%);
}
.type-wrap {
  padding: 372rpx  0 50rpx;
  box-sizing: border-box;
}
.type-wrap .type-one-item {
  padding: 0 30rpx;
}
.type-wrap .type-one-item .type-h {
  color: #282828;
  font-size: 30rpx;
  font-weight: bold;
  height: 76rpx;
  line-height: 76rpx;
}
.type-wrap .type-one-item .type-list {
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 0 10rpx;
}
.type-wrap .type-one-item .type-list .type-two-item {
  margin: 0rpx 20rpx 24rpx 0;
  background-color: #eee;
  border-radius: 14rpx;
  height: 66rpx;
  font-size: 28rpx;
  line-height: 66rpx;
  text-align: center;
  width: 150rpx;
}
.type-wrap .type-one-item .type-list .type-two-item:nth-of-type(4n) {
  margin-right: 0;
}
.saleShopWrap {
  width: 100%;
  height: 100%;
  background: #f9f9f9;
  padding-top: 372rpx;
}
.saleShopWrap .saleShop {
  width: 92%;
  height: 100%;
  margin: 20rpx auto;
  margin-bottom: 2%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}
.saleShopWrap .saleShop .shopview {
  background: #fff;
  width: 335rpx;
  height: 488rpx;
  display: inline-block;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.saleShopWrap .saleShop .shopview image {
  width: 327rpx;
  height: 327rpx;
}
.saleShopWrap .saleShop .shopview .saleTag {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  padding: 20rpx 30rpx;
}
.saleShopWrap .saleShop .shopview .saleTag text {
  width: 290rpx;
  display: block;
}
.saleShopWrap .saleShop .shopview .fot {
  padding: 0 30rpx;
}
.saleShopWrap .saleShop .shopview .salep {
  font-size: 28rpx;
  color: red;
  font-weight: bold;
  padding-left: 30rpx;
}
.saleShopWrap .saleShop .shopview .salesmple {
  font-size: 24rpx;
  color: red;
  font-weight: normal;
}
.saleShopWrap .saleShop .shopview .saleprice {
  font-weight: bolder;
  color: red;
  font-size: 38rpx;
}
.saleShopWrap .saleShop .shopview .saleexprice {
  color: #666;
  font-size: 24rpx;
  font-weight: normal;
  padding-left: 25rpx;
  text-decoration: line-through;
}
.saleShopWrap .saleShop .shopview .saletag {
  width: 60rpx;
  background: red;
  text-align: center;
  line-height: 20rpx;
  font-size: 10px;
  padding: 8rpx;
  color: white;
  border-radius: 10rpx;
  margin-left: 3%;
  margin-top: -2%;
}
.back-img {
  width: 44rpx;
  height: 44rpx;
  position: fixed;
  top: 64rpx;
  left: 26rpx;
}
