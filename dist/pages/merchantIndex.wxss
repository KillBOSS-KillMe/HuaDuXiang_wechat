.shop-wrap {
  background: #f9f9f9;
}
.shop-head {
  position: relative;
  height: 284rpx;
  width: 100%;
}
.shop-head .head-bg-img {
  width: 100%;
  height: 100%;
}
.shop-head .cont {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #00000088;
  padding: 50rpx 30rpx;
  display: flex;
  align-items: flex-end;
  box-sizing: border-box;
}
.shop-head .cont > view {
  display: flex;
  align-items: center;
}
.shop-head .cont > view .head-img {
  width: 94rpx;
  height: 94rpx;
  border-radius: 10rpx;
}
.shop-head .cont > view text {
  font-weight: bold;
  font-size: 34rpx;
  margin-left: 20rpx;
  color: #fff;
}
.shop-title {
  padding: 20rpx 30rpx 0 30rpx;
  font-weight: bold;
}
.saleShopWrap {
  width: 100%;
  height: 100%;
  background: #f9f9f9;
  padding-bottom: 160rpx;
}
.saleShopWrap .saleShop {
  width: 92%;
  height: 100%;
  margin: 20rpx auto;
  margin-bottom: 2%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}
.saleShopWrap .saleShop .shopview {
  background: #fff;
  width: 335rpx;
  height: 488rpx;
  display: inline-block;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.saleShopWrap .saleShop .shopview image {
  width: 327rpx;
  height: 327rpx;
}
.saleShopWrap .saleShop .shopview .saleTag {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  padding: 20rpx 30rpx;
}
.saleShopWrap .saleShop .shopview .saleTag text {
  width: 290rpx;
  display: block;
}
.saleShopWrap .saleShop .shopview .fot {
  padding: 0 30rpx;
}
.saleShopWrap .saleShop .shopview .salep {
  font-size: 28rpx;
  color: red;
  font-weight: bold;
  padding-left: 30rpx;
}
.saleShopWrap .saleShop .shopview .salesmple {
  font-size: 24rpx;
  color: red;
  font-weight: normal;
}
.saleShopWrap .saleShop .shopview .saleprice {
  font-weight: bolder;
  color: red;
  font-size: 42rpx;
}
.saleShopWrap .saleShop .shopview .saleexprice {
  color: #666;
  font-size: 24rpx;
  font-weight: normal;
  padding-left: 25rpx;
  text-decoration: line-through;
}
.saleShopWrap .saleShop .shopview .saletag {
  width: 60rpx;
  background: red;
  text-align: center;
  line-height: 20rpx;
  font-size: 10px;
  padding: 8rpx;
  color: white;
  border-radius: 10rpx;
  margin-left: 3%;
  margin-top: -2%;
}
