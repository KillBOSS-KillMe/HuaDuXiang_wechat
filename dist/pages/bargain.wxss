@import "./../components/mask.wxss";
.wrap {
  width: 100%;
  height: 100%;
  background: #f9f9f9;
}
.wrap .topCard {
  width: 93%;
  height: 260rpx;
  background: #fff;
  margin: 20rpx auto;
}
.wrap .topCard image {
  width: 100%;
  height: 100%;
}
.wrap .saleShopWrap {
  width: 100%;
  height: 100%;
  background: #f9f9f9;
}
.wrap .saleShopWrap .saleShop {
  width: 93%;
  height: 100%;
  margin: 20rpx auto;
  background: #f9f9f9;
  margin-bottom: 2%;
}
.wrap .saleShopWrap .saleShop .shopview {
  width: 100%;
  height: 160rpx;
  position: relative;
  padding: 20rpx 0rpx;
  margin-bottom: 19rpx;
  border-radius: 20rpx;
}
.wrap .saleShopWrap .saleShop .shopview image {
  width: 150rpx;
  height: 156rpx;
}
.wrap .saleShopWrap .saleShop .shopview .barginTitle {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  position: absolute;
  top: 12%;
  left: 26%;
  width: 480rpx;
}
.wrap .saleShopWrap .saleShop .shopview .barginProgess {
  position: absolute;
  top: 40%;
  left: 26%;
  font-size: 22rpx;
  color: #9e9e9e;
  width: 30%;
}
.wrap .saleShopWrap .saleShop .shopview .barginSurplus {
  position: absolute;
  top: 35%;
  left: 59%;
  font-size: 26rpx;
  color: #ff2228;
}
.wrap .saleShopWrap .saleShop .shopview .barginPriceNum {
  position: absolute;
  top: 68%;
  left: 26%;
  font-size: 28rpx;
  color: #ff2228;
}
.wrap .saleShopWrap .saleShop .shopview .barginBtn {
  width: 180rpx;
  height: 60rpx;
  background: #ff2228;
  color: white;
  position: absolute;
  bottom: 8%;
  right: 1%;
  font-size: small;
  text-align: center;
  line-height: 60rpx;
}
.attr-box {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #fff;
  z-index: 999;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  box-sizing: border-box;
  padding: 30rpx 30rpx 76rpx 30rpx;
}
.attr-box .goods-t {
  display: flex;
}
.attr-box .goods-t .goods-img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
}
.attr-box .goods-t .goods-right {
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.attr-box .goods-t .goods-right .title {
  font-weight: bold;
  font-size: 30rpx;
  width: 500rpx;
}
.attr-box .goods-t .goods-right .attr {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #999;
}
.attr-box .goods-h {
  font-weight: bold;
  font-size: 32rpx;
  padding: 30rpx 0 0rpx 0rpx;
}
.attr-box .prop {
  display: flex;
}
.attr-box .prop .prop-i {
  height: 60rpx;
  border-radius: 10rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  background: #f6f6f6;
  margin: 30rpx 30rpx 0 0;
}
.attr-box .prop .prop-active {
  background: #ff2228;
  color: #fff;
}
.attr-box .change-num {
  padding-top: 24rpx;
  display: flex;
  align-items: center;
  width: 138rpx;
  text-align: center;
  height: 44rpx;
  justify-content: space-between;
}
.attr-box .change-num .img {
  width: 44rpx;
  height: 44rpx;
  display: block;
}
.attr-box .change-num .num {
  font-weight: bold;
  line-height: 44rpx;
  font-size: 32rpx;
}
.attr-box .prop-btn {
  color: #fff;
  font-size: 28rpx;
  border-radius: 10rpx;
  height: 68rpx;
  width: 150rpx;
  text-align: center;
  line-height: 68rpx;
  background: #ff2228;
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
}
.shop-box {
  position: fixed;
  bottom: 0;
  height: 430rpx;
  width: 100%;
  background: #fff;
  z-index: 999;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
}
.shop-box .address {
  height: 120rpx;
  color: #333;
  font-size: 32rpx;
  line-height: 100rpx;
  text-align: center;
  font-weight: bold;
}
.shop-box .userAddress {
  display: flex;
  flex-wrap: wrap;
}
.shop-box .userAddress text {
  width: 100%;
  font-size: 28rpx;
  color: #333;
  padding: 5rpx 50rpx;
  font-weight: 600;
}
.shop-box .userAddress image {
  position: absolute;
  bottom: 50%;
  right: 4%;
  width: 50rpx;
  height: 50rpx;
}
.shop-box .newAddress {
  display: flex;
  flex-wrap: wrap;
  margin-top: 40rpx;
}
.shop-box .newAddress text {
  width: 100%;
  font-weight: 600;
  font-size: 28rpx;
  color: #333;
  padding-left: 50rpx;
}
.shop-box .newAddress image {
  position: absolute;
  bottom: 26%;
  right: 4%;
  width: 50rpx;
  height: 50rpx;
}
.shop-box .address-btn {
  color: #fff;
  font-size: 28rpx;
  border-radius: 10rpx;
  height: 68rpx;
  width: 590rpx;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  line-height: 68rpx;
  background: #ff2228;
  position: absolute;
  bottom: 12rpx;
}
.share-box {
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 999;
  width: 542rpx;
  height: 804rpx;
  top: 10%;
  left: 50%;
  transform: translateX(-50%);
}
.share-box .bg-img {
  height: 100%;
  width: 100%;
}
.share-box .share-content {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  text-align: center;
}
.share-box .share-content .title {
  padding-top: 360rpx;
  color: #ff2228;
  font-size: 32rpx;
  font-weight: bold;
}
.share-box .share-content .title text {
  font-size: 46rpx;
}
.share-box .share-content .p {
  padding: 20rpx 0 80rpx;
}
.share-box .share-content .share-btn {
  width: 114rpx;
  margin: 0 auto;
  text-align: center;
}
.share-box .share-content .share-btn image {
  width: 114rpx;
  height: 114rpx;
  display: block;
}
.share-box .share-content .share-btn text {
  font-weight: bold;
  font-size: 32rpx;
  padding-top: 18rpx;
}
