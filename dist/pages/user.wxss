@import "./../components/nav.wxss";
page {
  background: #f3f3f3;
  height: 100%;
}
.top {
  position: relative;
  width: 100%;
  height: 320rpx;
  margin-bottom: 10rpx;
  /* 背景图设置 */
}
.top .top_imgbg {
  width: 100%;
  height: 100%;
  position: relative;
}
.top .top_user {
  position: absolute;
  width: 100%;
  height: 250rpx;
  top: 0;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
  /* 头像样式设置 */
  /* 用户名称设置 */
}
.top .top_user .imgSrc {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 20rpx 0 20rpx;
}
.top .top_user .username {
  color: #333333;
  font-size: 32rpx;
}
.top .top_user .vip-tap {
  height: 36rpx;
  line-height: 36rpx;
  padding: 0 20rpx;
  border-radius: 18rpx;
  background: #C6C6C6;
  color: #fff;
  font-size: 26rpx;
  margin-left: 10rpx;
}
.top .topVip {
  width: 90%;
  height: 96rpx;
  background: linear-gradient(to right, #f9bf8b 0, #ffddbf 100%);
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  position: absolute;
  left: 5%;
  top: 79%;
  z-index: 99;
  color: #7b5533;
  font-size: 28rpx;
  line-height: 96rpx;
  border-radius: 10rpx;
}
.top .topVip image {
  width: 44rpx;
  height: 44rpx;
  margin: 30rpx;
}
.top .topVip button {
  width: 146rpx;
  height: 55rpx;
  background: #ffebda;
  line-height: 63rpx;
  font-size: 24rpx;
  color: #7b5533;
  border-radius: 1rpx;
  position: absolute;
  right: 2%;
  top: 23%;
  text-align: center;
  border-radius: 10rpx;
}
/* 我的订单 */
.my_order {
  width: 100%;
  height: 240rpx;
  background: #f9f9f9;
  position: relative;
  /*  功能入口区 */
}
.my_order .my_all {
  align-items: center;
  justify-content: space-between;
  width: 90%;
  position: absolute;
  top: 18%;
  left: 5%;
  font-weight: bold;
  color: #333;
  font-size: 30rpx;
  display: flex;
}
.my_order .my_all > image {
  width: 44rpx;
  height: 44rpx;
}
.my_order .my_all .my_text {
  font-size: 24rpx;
  color: #a3a3a3;
  font-weight: normal;
  flex: 1;
  text-align: right;
}
.my_order .icon_entry {
  width: 90%;
  height: 100rpx;
  position: relative;
  top: 50%;
  left: 5%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  line-height: 106rpx;
}
.my_order .icon_entry .iconFun {
  width: 25%;
  display: flex;
  justify-content: center;
  position: relative;
}
.my_order .icon_entry .iconFun .icon_num {
  position: absolute;
  top: -15%;
  left: 45%;
}
.my_order .icon_entry .iconFun .icon_text {
  width: 170rpx;
  position: absolute;
  top: 28%;
  left: 27%;
  font-size: 26rpx;
  color: #333;
}
.my_order .iconFun:nth-last-child(1) .icon_text:nth-last-child(1) {
  position: absolute;
  top: 28%;
  left: 10%;
}
/* 我的服务 */
