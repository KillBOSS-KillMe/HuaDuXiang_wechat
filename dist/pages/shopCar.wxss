@import "./../components/nav.wxss";
@import "./../components/cart_count.wxss";
@import "./../components/swiper_delete.wxss";
page {
  background: #F9F9F9;
}
.good-list {
  height: 240rpx;
}
.good-list .swiper-item-wrapper .swiper-content {
  border-bottom: 1rpx solid #F9F9F9;
  background: #fff;
  position: relative;
  margin-bottom: 20rpx;
}
.good-list .swiper-item-wrapper .swiper-content .goods-info {
  display: flex;
  height: 150rpx;
  box-sizing: border-box;
  position: relative;
}
.good-list .swiper-item-wrapper .swiper-content .goods-info .icon_check {
  position: absolute;
  top: 62%;
  left: 3%;
}
.good-list .swiper-item-wrapper .swiper-content .goods-info .img-box {
  background-color: #F9F9F9;
  width: 188rpx;
  height: 188rpx;
  position: absolute;
  top: 13%;
  left: 13%;
}
.good-list .swiper-item-wrapper .swiper-content .goods-info .img-box .img {
  width: 100%;
  height: 100%;
}
.good-list .swiper-item-wrapper .swiper-content .goods-info .text-box .goods-title {
  width: 60%;
  font-size: 30rpx;
  font-weight: bold;
  position: absolute;
  top: 16%;
  left: 42%;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.good-list .swiper-item-wrapper .swiper-content .goods-info .text-box .goods-tag {
  background: #FBFBFB;
  font-size: 24rpx;
  padding: 6rpx 10rpx;
  color: #9E9E9E;
  position: absolute;
  top: 50%;
  left: 42%;
  border-radius: 18rpx;
  text-align: center;
  line-height: auto;
}
.good-list .swiper-item-wrapper .swiper-content .goods-info .text-box .price {
  position: absolute;
  top: 110%;
  left: 42%;
  color: red;
}
.good-list .swiper-item-wrapper .swiper-content .goods-info .text-box .shop-count {
  position: absolute;
  top: 102%;
  right: 0%;
  width: 190rpx;
  height: 48rpx;
  line-height: 48rpx;
}
.check-box {
  display: flex;
  justify-content: space-between;
  position: fixed;
  left: 0;
  bottom: 8%;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 18rpx;
  border-top: 1px solid #F9F9F9;
  border-bottom: 1px solid #F9F9F9;
  background-color: #fff;
  z-index: 999;
}
.check-box .left-price {
  position: relative;
  height: 100%;
  display: flex;
  margin-right: 18rpx;
  flex: 1;
}
.check-box .left-price .all-select-box {
  position: relative;
  font-size: 30rpx;
  color: red;
}
.check-box .left-price .all-select-box icon {
  position: absolute;
  top: 0%;
  left: 18%;
  height: 100%;
  width: 165rpx;
  display: flex;
  align-items: center;
}
.check-box .left-price .all-select-box text {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  margin-left: 88rpx;
  font-size: 30rpx;
  color: #333;
}
.check-box .left-price .total {
  font-size: 28rpx;
  color: #A3A3A3;
  margin-left: 6%;
}
.check-box .pay-btn {
  width: 194rpx;
  height: 70rpx;
  border-radius: 10rpx;
  line-height: 70rpx;
  text-align: center;
  background: linear-gradient(to right, #FF6888 0, #FF2228 100%);
  color: #ffffff;
  font-size: 30rpx;
  font-weight: bold;
  margin: auto 7% auto 0;
}
.check-box .pay-btn.no-select {
  background-color: #cccccc;
}
