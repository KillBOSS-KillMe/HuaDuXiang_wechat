
    <view class="wrap">
        <!-- 头部卡片 -->
        <view class="topCard">
            <image src="{{requestImgUrl + topImg}}"/>
        </view>
        <!-- 商品 -->
        <view class="saleShopWrap">
            <view class="saleShop">
                <block wx:for="{{flowData}}" wx:for-index="index" wx:for-item="item" wx:key="key">
                    <view class="shopview" bindtap="jumpTimeDetails" data-wpyjumptimedetails-a="{{item.id}}">
                        <image src="{{requestImgUrl + item.img}}"/>
                        <view>
                            <text class="preTitle">{{item.title}}</text>
                            <text class="preTag">{{item.tag}}</text>
                            <text class="preprice">{{item.price}}<text class="yuanclass">元</text></text>
                            <text class="preexprice">原价￥ {{item.exprice}}</text>
                        </view>
                        <button class="preBtn">立即拼团</button>
                    </view>
                </block>
            </view>
        </view>
    </view>