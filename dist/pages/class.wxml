
  <view>
    <view class="goods-wrap">
      <scroll-view class="left-scroll" scroll-y bindscroll="bindscroll">
        <view>
          <block wx:for="{{20}}" wx:for-index="index" wx:for-item="item" wx:key="key">
            <view class="text {{leftNav == index ? 'active-text':''}}" bindtap="changeLeftNav">{{item.name}}分类</view>
          </block>
        </view>
      </scroll-view>
      <view class="goods-right">
        <scroll-view class="right-scroll" scroll-y>
          <view class="advertisement" hover-class="none">
            <image src="/assets/img/image.png"/>
          </view>
          <block wx:for="{{10}}" wx:for-index="index" wx:for-item="item" wx:key="key">
            <view class="two-type">
              <view class="title">水果</view>
              <view class="two-type-list">
                <block wx:for="{{10}}" wx:for-index="index" wx:for-item="item" wx:key="key">
                  <view class="item">
                    <image src="/assets/img/image.png"/>
                    <text>葡萄</text>
                  </view>
                </block>
              </view>
            </view>
          </block>
        </scroll-view>
      </view>
    </view>

    
  <view class="nav">
    <view class="footer">
      <block wx:for="{{$nav$navList}}" wx:for-index="$nav$index" wx:for-item="$nav$item" wx:key="$nav$key">
        <view class="ft_item {{$nav$item.active ? 'action':'noAction'}}">
          <view bindtap="$nav$navPage" data-wpynavpage-a="{{$nav$item.url}}">
            <view class="iconfont {{$nav$item.icon}}"/>
            <text class="text">{{$nav$item.title}}</text>
          </view>
        </view>
      </block>
    </view>
  </view>

  </view>