
  <view>
    <view class="goods-wrap">
      <scroll-view class="left-scroll" scroll-y bindscroll="bindscroll">
        <view>
          <block wx:for="{{20}}" wx:for-index="index" wx:for-item="item" wx:key="key">
            <view class="text {{leftNav == index ? 'active-text':''}}" bindtap="changeLeftNav">{{item.name}}分类</view>
          </block>
        </view>
      </scroll-view>
      <view class="goods-right">
        <scroll-view class="right-scroll" scroll-y>
          <view class="advertisement" hover-class="none">
            <image src="/assets/img/image.png"/>
          </view>
          <block wx:for="{{10}}" wx:for-index="index" wx:for-item="item" wx:key="key">
            <view class="two-type">
              <view class="title">水果</view>
              <view class="two-type-list">
                <block wx:for="{{10}}" wx:for-index="index" wx:for-item="item" wx:key="key">
                  <view class="item">
                    <image src="/assets/img/image.png"/>
                    <text>葡萄</text>
                  </view>
                </block>
              </view>
            </view>
          </block>
        </scroll-view>
      </view>
    </view>

    
<view class="nav">
  <view class="footer">
    <view class="ft_item {{$nav$navAction[0]}}">
      <view bindtap="$nav$goIndex">
        <view class="iconfont iconshouye-copy"/>
        <text class="text">首页</text>
      </view>
    </view>
    <view class="ft_item {{$nav$navAction[1]}}">
      <view bindtap="$nav$goClass">
        <view class="iconfont iconfenlei"/>
        <text class="text">分类</text>
      </view>
    </view>
    <view class="ft_item {{$nav$navAction[2]}}">
      <view bindtap="$nav$goSettled">
        <view class="iconfont iconshezhi"/>
        <text class="text">入驻</text>
      </view>
    </view>
    <view class="ft_item {{$nav$navAction[3]}}">
      <view bindtap="$nav$goByCar">
        <view class="iconfont icongouwuche-copy"/>
        <text class="text">购物车</text>
      </view>
    </view>
    <view class="ft_item {{$nav$navAction[4]}}">
      <view bindtap="$nav$goUser">
        <view class="iconfont iconwode"/>
        <text class="text">我的</text>
      </view>
    </view>
  </view>
</view>

  </view>