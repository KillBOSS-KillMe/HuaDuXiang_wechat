.wallet-wrap .top-img {
  width: 690rpx;
  height: 268rpx;
  border-radius: 10rpx;
  margin: 0 auto;
  display: block;
}
.wallet-wrap .explain {
  padding: 30rpx;
}
.wallet-wrap .explain .exp-h {
  font-weight: bold;
  font-size: 28rpx;
  color: #333;
  padding: 10rpx 0 30rpx 0;
}
.wallet-wrap .explain .exp-p {
  color: #999999;
  font-size: 24rpx;
  line-height: 1.5;
}
.wallet-wrap .input-wrap {
  border-top: 20rpx solid #f3f3f3;
  padding: 0 30rpx;
}
.wallet-wrap .input-wrap .com-input {
  display: flex;
  align-items: center;
  margin-top: 40rpx;
}
.wallet-wrap .input-wrap .com-input input {
  height: 60rpx;
  border: 1px solid #c7c7c7;
  border-radius: 10rpx;
  flex: 1;
}
.wallet-wrap .input-wrap .com-input .com-title {
  width: 140rpx;
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
}
.wallet-wrap .input-wrap .com-input .company {
  margin-left: 30rpx;
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
}
.wallet-wrap .input-wrap .input-tisp {
  margin-left: 140rpx;
  color: #666666;
  font-size: 24rpx;
  padding-top: 10rpx;
  display: block;
}
.wallet-wrap .wallet-btn {
  width: 690rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin: 40rpx auto;
  color: #fff;
  font-weight: bold;
  border-radius: 10rpx;
  background: #FF2228;
  font-size: 30rpx;
}
