@import "./../components/cart_count.wxss";
@import "./../components/swiper_delete.wxss";
page {
  background: #F9F9F9;
}
.good-list {
  height: 240rpx;
}
.good-list .swiper-item-wrapper .swiper-content {
  border-bottom: 1rpx solid #F9F9F9;
  background: #fff;
  position: relative;
  margin-bottom: 20rpx;
}
.good-list .swiper-item-wrapper .swiper-content .goods-info {
  display: flex;
  height: 150rpx;
  box-sizing: border-box;
  position: relative;
}
.good-list .swiper-item-wrapper .swiper-content .goods-info .icon_check {
  position: absolute;
  top: 62%;
  left: 3%;
  z-index: 999;
}
.good-list .swiper-item-wrapper .swiper-content .goods-info .goodstap {
  position: relative;
  width: 100%;
  display: flex;
  box-sizing: border-box;
}
.good-list .swiper-item-wrapper .swiper-content .goods-info .goodstap .img-box {
  background-color: #F9F9F9;
  width: 188rpx;
  height: 188rpx;
  position: absolute;
  top: 13%;
  left: 13%;
}
.good-list .swiper-item-wrapper .swiper-content .goods-info .goodstap .img-box .img {
  width: 100%;
  height: 100%;
}
.good-list .swiper-item-wrapper .swiper-content .goods-info .goodstap .text-box .goods-title {
  width: 60%;
  font-size: 30rpx;
  font-weight: bold;
  position: absolute;
  top: 16%;
  left: 42%;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.good-list .swiper-item-wrapper .swiper-content .goods-info .goodstap .text-box .goods-tag {
  font-size: 24rpx;
  color: #9E9E9E;
  position: absolute;
  top: 70%;
  left: 42%;
  border-radius: 18rpx;
  text-align: center;
  line-height: auto;
}
.good-list .swiper-item-wrapper .swiper-content .goods-info .goodstap .text-box .goods-tag .tag-price {
  font-size: 28rpx;
  color: red;
  font-weight: bold;
}
.good-list .swiper-item-wrapper .swiper-content .goods-info .goodstap .text-box .price {
  position: absolute;
  top: 110%;
  left: 42%;
  font-size: 24rpx;
  color: #9E9E9E;
}
.good-list .swiper-item-wrapper .swiper-content .goods-info .goodstap .text-box .price .exprice {
  text-decoration: line-through;
}
.good-list .swiper-item-wrapper .swiper-content .goods-info .shop-count {
  position: absolute;
  top: 98%;
  right: 0%;
  width: 190rpx;
  height: 48rpx;
  line-height: 48rpx;
}
.check-box {
  display: flex;
  justify-content: space-between;
  position: absolute;
  left: 0;
  bottom: 8%;
  width: 95%;
  height: 88rpx;
  line-height: 88rpx;
  padding-left: 18rpx;
  z-index: 999;
}
.check-box .pay-btn {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  line-height: auto;
  text-align: center;
  background: #FF2228;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  margin: auto 7%;
}
