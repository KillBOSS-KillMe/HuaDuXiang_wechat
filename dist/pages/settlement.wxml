
  <view class="settlement-wrap">
    <navigator url="/pages/consignee" hover-class="none" class="useraddress">
      <image class="imgadd" src="/assets/img/image33.png"/>
      <view class="center"  wx:if="{{address}}">
        <view class="userinfo">收货人: {{address.true_name}} {{address.tel_phone}}</view>
        <view class="useradd">{{address.area_info}}{{address.address}}</view>
      </view>
      <view class="center"  wx:elif="wx:elif">
        <view class="add-address">添加收货地址</view>
      </view>
      <image class="imgright" src="/assets/img/image25.png"/>
    </navigator>
    <view class="usergoods-wrap">
      <block wx:for="{{store_cart_list}}" wx:for-index="index" wx:for-item="item" wx:key="key">
        <view class="shop-list">
          <block wx:for="{{item.goods_list}}" wx:for-index="idx" wx:for-item="ele" wx:key="key">
            <view class="usergoods">
              <image class="goodsimg" src="{{ele.goods_image_url}}"/>
              <view class="goods-right">
                <view class="goodsname overflow-one">{{ele.goods_name}}</view>
                <view class="goodstag">
                  <text>{{ele.goods_spec}}</text>
                  <view class="goodnum">×{{ele.goods_num}}</view>
                </view>
                <view class="goodprice">
                  ￥
                  <text class="price">{{ele.goods_price}}</text>
                </view>
              </view>
            </view>
          </block>
          <view class="goods-service">
            <view class="com-list" wx:if="{{item.freight == 1}}">
              <view class="title">运费</view>
              <view class="price">￥{{postage[index]}}</view>
            </view>
            <view class="com-list" wx:if="{{item.store_voucher_info.voucher_price}}">
              <view class="title">优惠券</view>
              <view class="price">-{{item.store_voucher_info.voucher_price}}</view>
              <!-- <image class="imgright" src="/assets/img/image25.png" /> -->
            </view>
            <view class="merchandise-subtotal">小计：<text>￥{{item.store_goods_total}}</text></view>
          </view>
        </view>
      </block>
    </view>
    <!-- 定金 -->
    <view class="earnest-money" hidden>
      <view class="item  red-color">
        <view class="title">定金</view>
        <view class="price">
          ￥
          <text>2</text>
        </view>
      </view>
      <view class="item  gray-color">
        <view class="title">尾款</view>
        <view class="price">
          ￥
          <text>2000</text>
        </view>
      </view>
      <text>08月22日 00:0000开始支付尾款</text>
    </view>

    <view class="price-type">
      <block wx:if="{{index == 0 || member_points > 0}}" wx:for="{{priceArr}}" wx:for-index="index" wx:for-item="item" wx:key="key">
        <view class="type-item {{payment_type == index ? 'type-active' : ''}}" bindtap="changePriceType" data-wpychangepricetype-a="{{index}}">
          <image class="type-img" src="/assets/img/{{item.icon}}"/>
          <text>{{item.title}}<text wx:if="{{index == 1}}">({{member_points}}元)</text> </text>
          <image class="active-img" src="/assets/img/image60.png"/>
          <image class="other-img" src="/assets/img/image59.png"/>
        </view>
      </block>
    </view>
    <!-- 底部 订单提交 -->
    <view class="settlebottom">
      <view class="num">共{{goodsAllNum}}件</view>
      <view class="priceall">
        共计 ￥
        <text class="allprice">{{allPrice}}</text>元
      </view>
      <button class="sub-btn" bindtap="getWXPayment">提交订单</button>
    </view>

    
  
  <view class="list">
    <view class="{{$paspopup$pas$maskFlag ? 'block':''}} mask-wrap" catchtouchmove="$paspopup$pas$move">
      <view class="mask" bindtap="$paspopup$pas$hideMask"/>
      
    <view class="pas-box">
      <view class="title">
        <view class="close" bindtap="$paspopup$hideMask">X</view>
        <text>请输入支付密码</text>
      </view>
      <view class="price">￥{{$paspopup$pasPrice}}</view>
      <view class="pay-type">
        <view>支付方式</view>
        <view>余额</view>
      </view>
      <view class="input-hide"> 
        <input type="number" focus="{{$paspopup$focus}}" maxlength="6" bindblur="$paspopup$bindblur" value="{{$paspopup$pasvalue}}" bindinput="$paspopup$bindinput"/>
      </view>
      <view bindtap="$paspopup$onFocus" class="pas-input">
           <block wx:for="{{$paspopup$pasArr}}" wx:for-index="$paspopup$index" wx:for-item="$paspopup$item" wx:key="$paspopup$key">
             <view>{{$paspopup$item}}</view>
           </block>
      </view>
    </view>
  
    </view>
  </view>


  </view>