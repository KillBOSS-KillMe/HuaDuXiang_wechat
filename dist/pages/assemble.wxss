.wrap {
  width: 100%;
  height: 100%;
  background: #F9F9F9;
}
.wrap .topCard {
  width: 93%;
  height: 260rpx;
  background: #fff;
  margin: 20rpx auto;
}
.wrap .topCard image {
  width: 100%;
  height: 100%;
}
.wrap .saleShopWrap {
  width: 100%;
  height: 100%;
  background: #F9F9F9;
}
.wrap .saleShopWrap .saleShop {
  width: 93%;
  height: 100%;
  margin: 20rpx auto;
  background: #F9F9F9;
  margin-bottom: 2%;
}
.wrap .saleShopWrap .saleShop .shopview {
  width: 100%;
  height: 160rpx;
  position: relative;
  padding: 20rpx 0rpx;
  margin-bottom: 19rpx;
  border-radius: 20rpx;
}
.wrap .saleShopWrap .saleShop .shopview image {
  width: 150rpx;
  height: 156rpx;
}
.wrap .saleShopWrap .saleShop .shopview .preTitle {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  position: absolute;
  top: 12%;
  left: 26%;
}
.wrap .saleShopWrap .saleShop .shopview .preTag {
  position: absolute;
  top: 36%;
  left: 26%;
  font-size: 22rpx;
  color: #9E9E9E;
}
.wrap .saleShopWrap .saleShop .shopview .preprice {
  position: absolute;
  top: 63%;
  left: 26%;
  font-weight: bolder;
  color: red;
  font-size: 42rpx;
}
.wrap .saleShopWrap .saleShop .shopview .preexprice {
  position: absolute;
  top: 73%;
  left: 34%;
  color: #999999;
  font-size: 24rpx;
  font-weight: normal;
  padding-left: 25rpx;
  text-decoration: line-through;
}
.wrap .saleShopWrap .saleShop .shopview .yuanclass {
  color: red;
  font-size: 22rpx;
  font-weight: normal;
}
.wrap .saleShopWrap .saleShop .shopview .preBtn {
  width: 180rpx;
  height: 60rpx;
  background: #FF2228;
  color: white;
  position: absolute;
  bottom: 12%;
  right: 1%;
  font-size: small;
  text-align: center;
  line-height: 60rpx;
}
