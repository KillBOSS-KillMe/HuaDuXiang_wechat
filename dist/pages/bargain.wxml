
  <view class="wrap">
    <!-- 头部卡片 -->
    <view class="topCard">
      <image src="{{requestImgUrl + topImg}}"/>
    </view>
    <!-- 商品 -->
    <view class="saleShopWrap">
      <view class="saleShop">
        <block wx:for="{{barginData}}" wx:for-index="index" wx:for-item="item" wx:key="key">
          <view class="shopview" bindtap="jumpTimeDetails" data-wpyjumptimedetails-a="{{item.id}}">
            <image src="{{requestImgUrl + item.img}}"/>
            <view>
              <text class="barginTitle">{{item.title}}</text>
              <progress class="barginProgess" percent="{{item.num}}" font-size="14" backgroundColor="#FFE0E1" activeColor="#FF2228" stroke-width="9" border-radius="10"/>
              <text class="barginSurplus">已抢{{item.num}}件</text>
              <text class="barginPriceNum">限量{{item.num}}件</text>
            </view>
            <button class="barginBtn">点击免费拿</button>
          </view>
        </block>
      </view>
    </view>
    <text>显示进度数字/字号22</text>
    <block wx:for="{{barginData}}" wx:for-index="index" wx:for-item="item" wx:key="key"/>
    <!-- 选择商品属性 -->
    
  <view class="list">
    <view class="{{$attrsmask$maskFlag ? 'block':''}} mask-wrap" catchtouchmove="$attrsmask$move">
      <view class="mask" bindtap="$attrsmask$hideMask"/>132465
      
      <view class="attr-box">
        <view class="goods-t">
          <image class="goods-img" src="{{requestImgUrl}}card.png"/>
          <view class="goods-right">
            <view class="title overflow-one">萌粉订书机 小型萌粉订书机萌粉订书机萌粉订书机</view>
            <view class="attr">
              <view>粉+白</view>
              <view>x1</view>
            </view>
          </view>
        </view>
        <view>
          <view class="goods-h">规格</view>
          <view class="prop">
            <block wx:for="{{propArr}}" wx:for-index="index" wx:for-item="item" wx:key="key">
              <view class="prop-i {{index == 0 ? 'prop-active' : ''}}">大小</view>
            </block>
          </view>
        </view>
        <view>
          <view class="goods-h">数量</view>
          <view class="change-num">
            <view class="i" bindtap="reduNum">
              <image class="img" src="/assets/img/image19.png"  wx:if="{{goodsNum == 1}}"/>
              <image class="img" src="/assets/img/image20.png"  wx:else/>
            </view>
            <view class="i num">{{goodsNum}}</view>
            <view class="i" bindtap="addNum">
              <image class="img" src="/assets/img/image21.png"/>
            </view>
          </view>
        </view>
        <view class="prop-btn" bindtap="attrBtnSubmit">确定</view>
      </view>
    
    </view>
  </view>

    <!-- 选择地址 -->
    
  <view class="list">
    <view class="{{$addressmask$maskFlag ? 'block':''}} mask-wrap" catchtouchmove="$addressmask$move">
      <view class="mask" bindtap="$addressmask$hideMask"/>132465
      
      <view class="shop-box">
        <view class="address">选择收货地址</view>
        <view class="userAddress">
          <text>啦啦啦 12015230214</text>
          <text>山西省近海尽可能看到你的小区</text>
          <image src="{{requestImgUrl}}right.png"/>
        </view>
        <view class="newAddress">
          <text>新增地址</text>
          <image src="{{requestImgUrl}}right.png"/>
        </view>
        <view class="address-btn" bindtap="addressBtnSubmit">确定</view>
      </view>
    
    </view>
  </view>

    <!-- 分享 -->
    
  <view class="list">
    <view class="{{$sharesmask$maskFlag ? 'block':''}} mask-wrap" catchtouchmove="$sharesmask$move">
      <view class="mask" bindtap="$sharesmask$hideMask"/>132465
      
      <view class="share-box">
        <image class="bg-img" src="/assets/img/image22.png"/>
        <view class="share-content">
          <view class="title">
            您已砍了
            <text>200</text>元
          </view>
          <view class="p">分享给好友，可以多砍一刀哦！</view>
          <button open-type="share" class="share-btn">
            <image class="bg-img" src="/assets/img/image23.png"/>
            <text>微信</text>
          </button>
        </view>
      </view>
    
    </view>
  </view>

  </view>