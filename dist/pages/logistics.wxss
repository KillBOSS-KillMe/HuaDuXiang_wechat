.record-info-head {
  padding: 30rpx 30rpx 10rpx 30rpx;
  line-height: 1.5;
  border-top: 10rpx solid #f9f9f9;
}
.address-wrap {
  display: flex;
  padding: 0 30rpx;
}
.address-wrap .add-img {
  width: 48rpx;
  height: 48rpx;
}
.address-wrap .address-info {
  font-weight: bold;
  font-size: 28rpx;
  color: #333;
  width: 600rpx;
  margin-left: 20rpx;
  line-height: 1.3;
}
.log {
  padding: 30rpx;
}
.log-h {
  color: #282828;
  font-weight: bold;
  font-size: 32rpx;
  padding-bottom: 30rpx;
}
.log-wrap {
  border-top: 1px solid #f2f2f2;
  padding-top: 30rpx;
}
.log-i {
  display: flex;
  padding-bottom: 30rpx;
  position: relative;
}
.log-i .spot {
  width: 20rpx;
  height: 20rpx;
  background: #d4d4d4;
  border-radius: 50%;
  margin: 10rpx 30rpx 10rpx 40rpx;
}
.log-active .spot {
  box-shadow: 0 0 1rpx 10rpx #b7e0ff;
  background: #238fe2;
  position: relative;
  z-index: 20;
}
.log-right {
  width: 550rpx;
}
.log-right > view {
  font-size: 24rpx;
  color: #8e8e8e;
}
.log-right > view:nth-of-type(1) {
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #282828;
  line-height: 1.5;
}
.log-active .log-right > view:nth-of-type(1) {
  font-weight: bold;
  color: #238fe2;
}
.log-i::after {
  content: '';
  position: absolute;
  height: 100%;
  width: 4rpx;
  background: #d4d4d4;
  left: 48rpx;
  top: 24rpx;
}
.log-i:last-child::after {
  display: none;
}
