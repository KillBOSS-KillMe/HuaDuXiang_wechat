@import "./../components/mask.wxss";
.vip-box {
  width: 700rpx;
  height: 700rpx;
  background: #fff;
  border-radius: 20rpx;
  z-index: 999;
  position: fixed;
  top: 10%;
  padding: 40rpx 50rpx;
  box-sizing: border-box;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.vip-box .title {
  font-weight: bold;
  font-size: 34rpx;
  padding-top: 20rpx;
}
.vip-box input {
  text-align: center;
  width: 50%;
  border-bottom: 1px solid #ccc;
  height: 90rpx;
  line-height: 90rpx;
  font-weight: bold;
  font-size: 36rpx;
}
.vip-box .input-placeholder {
  font-weight: 400;
  font-size: 32rpx;
}
.vip-box .price-list {
  display: flex;
  flex-wrap: wrap;
}
.vip-box .price-list .price-item {
  width: 160rpx;
  margin: 20rpx 18rpx;
  border: 1px solid #ccc;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #999;
  border-radius: 10rpx;
  font-size: 32rpx;
}
.vip-box .price-list .price-active {
  color: #FF6888;
  border-color: #FF6888;
}
.vip-box .btn {
  width: 570rpx;
  height: 80rpx;
  border-radius: 10rpx;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(to right, #FF6888 0, #FF2228 100%);
  color: #ffffff;
  font-size: 30rpx;
  font-weight: bold;
}
.vip-head {
  position: relative;
}
.vip-head .bg-block {
  position: absolute;
  width: 100%;
  height: 310rpx;
  border-radius: 0 0 20% 20%;
  background: #2e2e30;
  z-index: -1;
}
.vip-head .vip-head-cont {
  padding: 30rpx 20rpx;
}
.vip-head .vip-head-cont .bg-img {
  width: 710rpx;
  height: 380rpx;
  border-radius: 20rpx;
}
.vip-head .vip-head-cont .cont {
  position: absolute;
  top: 30rpx;
  width: 710rpx;
  height: 380rpx;
  box-sizing: border-box;
  padding: 38rpx 42rpx 34rpx 34rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.vip-head .vip-head-cont .cont .info {
  display: flex;
  color: #fff;
}
.vip-head .vip-head-cont .cont .info > image {
  width: 92rpx;
  height: 92rpx;
  border-radius: 50%;
  margin-right: 14rpx;
}
.vip-head .vip-head-cont .cont .info .info-t {
  color: #fff;
}
.vip-head .vip-head-cont .cont .info .info-t text {
  font-weight: bold;
  display: block;
  font-size: 24rpx;
  padding-bottom: 20rpx;
}
.vip-head .vip-head-cont .cont .info .info-t .name {
  font-size: 36rpx;
}
.vip-head .vip-head-cont .cont .price {
  text-align: right;
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}
.vip-head .vip-head-cont .cont .price text {
  font-size: 32rpx;
}
.vip-head .vip-head-cont .cont .level-tap {
  position: absolute;
  top: 0;
  right: 0;
  width: 135rpx;
  height: 62rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #727272;
  font-size: 24rpx;
  border-radius: 0 20rpx 0 20rpx;
  color: #fff;
}
.vip-head .vip-head-cont .recharge {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.vip-head .vip-head-cont .recharge text {
  color: #603909;
  font-size: 26rpx;
  font-weight: bold;
  height: auto;
}
.vip-head .vip-head-cont .recharge .btn {
  background: linear-gradient(90deg, #cd9b5e, #bd8c52);
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 32rpx;
  padding: 0 40rpx;
  color: #fff;
  font-weight: bold;
}
.vip-title {
  font-weight: bold;
  color: #2b2b2b;
  font-size: 36rpx;
  padding: 0 0 0 30rpx;
}
.vip-grade {
  display: flex;
  padding: 20rpx 0 40rpx 0;
}
.vip-grade .grade-item {
  text-align: center;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.vip-grade .grade-item text {
  color: #ba8747;
  font-size: 24rpx;
  padding-bottom: 10rpx;
}
.vip-grade .grade-item .schedule {
  position: relative;
  width: 100%;
}
.vip-grade .grade-item .schedule .default {
  width: 30rpx;
  height: 30rpx;
  position: relative;
  z-index: 999;
}
.vip-grade .grade-item .schedule .active {
  width: 30rpx;
  height: 30rpx;
  position: relative;
  z-index: 999;
  display: none;
}
.vip-grade .grade-item .schedule::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 6rpx;
  background: #e3e3e3;
  top: 50%;
  transform: translateY(-50%);
  left: 50%;
}
.vip-grade .grade-item:nth-of-type(4) .schedule::after {
  display: none;
}
.vip-grade .grade-item .schedule-active .default {
  display: none;
}
.vip-grade .grade-item .schedule-active .active {
  display: inline-block;
}
.vip-grade .grade-item .schedule-active::after {
  background: #cb9a5d;
}
.vip-grade .grade-item .schedule-bg::after {
  background: #E3E3E3;
}
.vip-explain {
  border-top: 12rpx solid #f7f7f7;
}
.vip-explain .vip-title {
  padding: 30rpx 0 30rpx 30rpx;
}
.vip-explain .vip-explain-list {
  padding: 0 30rpx;
}
.vip-explain .vip-explain-list .item {
  padding-bottom: 60rpx;
}
.vip-explain .vip-explain-list .item .title {
  font-weight: bold;
  padding: 6rpx 0;
}
.vip-explain .vip-explain-list .item .p {
  line-height: 1.5;
  color: #666666;
  font-size: 26rpx;
}
