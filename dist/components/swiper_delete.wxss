.swiper-item-wrapper {
  position: relative;
  height: 100%;
  overflow: hidden;
}
.swiper-item-wrapper .swiper-content {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 5;
  padding: 0 18rpx;
  background-color: #fff;
}
.swiper-item-wrapper .swiper-actions {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 140rpx;
  height: 100%;
  z-index: 1;
  position: absolute;
  top: 0;
}
.swiper-item-wrapper .swiper-actions.actions-left {
  left: 0;
}
.swiper-item-wrapper .swiper-actions.actions-right {
  right: 0;
}
.swiper-item-wrapper .swiper-btn {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  color: #ffffff;
}
.swiper-item-wrapper .swiper-btn.del {
  background-color: #f4333c;
}
.swiper-item-wrapper .swiper-btn.edit {
  background-color: #108ee9;
}
