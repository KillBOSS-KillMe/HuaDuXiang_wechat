.footer {
  width: 100%;
  position: fixed;
  bottom: 0;
  background: #fff;
  border-top: 1rpx solid #f3f1f1;
  z-index: 30;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.footer .ft_item {
  width: 20%;
  height: 100%;
  text-align: center;
  float: left;
}
.footer .ft_item text {
  font-size: 25rpx;
  line-height: 20rpx;
  position: relative;
  bottom: 18rpx;
}
.show {
  display: block;
}
.hidden {
  display: none;
}
.footer .action .iconfont,
.footer .action {
  color: #FF3D4D !important;
}
.footer,
.footer .noAction .iconfont {
  color: #8e8e8e !important;
}
.iconfont {
  font-size: 70rpx !important;
}
