.cart-count {
  display: flex;
  width: 100%;
  height: 100%;
}
.cart-count .decrease {
  width: 48rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-left: 1rpx solid #ccc;
  border-bottom: 1px solid #ccc;
  border-top: 1px solid #ccc;
  border-bottom-left-radius: 6rpx;
  border-top-left-radius: 6px;
}
.cart-count .add {
  width: 48rpx;
  height: 100%;
  border-bottom: 1px solid #ccc;
  border-top: 1px solid #ccc;
  border-right: 1px solid #ccc;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top-right-radius: 6rpx;
  border-bottom-right-radius: 6rpx;
}
.cart-count input {
  width: 68rpx;
  height: 48rpx;
  line-height: 48rpx;
  min-height: 48rpx;
  text-align: center;
  font-size: 24rpx;
  border: 1px solid #cccccc;
}
