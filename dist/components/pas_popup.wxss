@import "./mask.wxss";
.pas-box {
  position: fixed;
  width: 80%;
  top: 10%;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background: #fff;
  z-index: 999;
  height: 500rpx;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}
.pas-box .title {
  text-align: center;
  position: relative;
  font-size: 30rpx;
  color: #000;
  font-weight: bold;
}
.pas-box .title .close {
  position: absolute;
  left: 0;
  padding: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}
.pas-box .price {
  font-weight: bold;
  font-size: 48rpx;
  text-align: center;
}
.pas-box .pay-type {
  display: flex;
  justify-content: space-between;
  color: #666;
  padding: 40rpx 20rpx 0;
}
.pas-box .pas-input {
  display: flex;
  align-items: center;
  justify-content: center;
}
.pas-box .pas-input > view {
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  border: 1px solid #ccc;
  border-right: none;
  font-weight: bold;
  color: #000;
  font-size: 30rpx;
}
.pas-box .pas-input > view:last-of-type {
  border-right: 1px solid #ccc;
}
